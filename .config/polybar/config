[settings]
screenchange-reload = true

[theme-colors]
bg = #333749
fg = #f9f3f1
focused-bg = #4585a0
focused-fg = #f9f3f1
urgent-bg = #ce5080

[bar/constraints]
width = 100%:-30
height = 34
offset-x = 15
offset-y = 0

fixed-center = true

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

override-redirect = true
wm-restack = i3

[bar/ui]
background = ${theme-colors.bg}
foreground = ${theme-colors.fg}

line-size = 5

font-0 = "JetBrainsMonoMedium Nerd Font:size=13;1"
font-1 = "Product Sans:size=14;1"

[bar/tray]
tray-background = ${theme-colors.bg}
tray-detached = false
tray-offset-x = -4.5
tray-position = right

[bar/mainbar-i3]
inherit = bar/constraints bar/ui bar/tray

modules-left = i3 rofimenu
modules-center = xwindow
modules-right = battery memory audio date

scroll-up = "#i3.prev"
scroll-down = "#i3.next"

[module/i3]
type = internal/i3

enable-scroll = true
wrapping-scroll = false

pin-workspaces = true
index-sort = true

ws-icon-0 = 1;I
ws-icon-1 = 2;II
ws-icon-2 = 3;III
ws-icon-3 = 4;IV
ws-icon-4 = 5;V

format = <label-state> <label-mode>

label-mode-padding = 1
label-mode-foreground = ${theme-colors.fg}
label-mode-background = ${theme-colors.bg}

label-focused = %icon%
label-focused-background = ${theme-colors.focused-bg}
label-focused-foreground = ${theme-colors.focused-fg}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-background = ${theme-colors.bg}
label-unfocused-foreground = ${theme-colors.fg}
label-unfocused-padding = 1

label-visible = %icon%
label-visible-background = ${theme-colors.bg}
label-visible-foreground = ${theme-colors.fg}
label-visible-padding = 1

label-urgent = %icon%
label-urgent-background = ${theme-colors.urgent-bg}
label-urgent-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:25:...%
label-background = ${theme-colors.focused-bg}
label-padding = 1

[module/date]
type = internal/date
interval = 1

date = "%b %d, %Y %a "
time = "%I:%M%p"

format-prefix-foreground = ${theme-colors.fg}
format-foreground = ${theme-colors.fg}
format-underline = ${theme-colors.urgent-bg}
label = %date%%time%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

[module/audio]
type = internal/pulseaudio

use-ui-max = false

format-volume = <ramp-volume> <label-volume>
label-volume-foreground = ${theme-colors.fg}
ramp-volume-foreground = ${theme-colors.fg}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = ﱝ
label-muted-foreground = ${theme-colors.urgent-bg}

click-middle = pavucontrol

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 100

format-charging = <ramp-capacity> <label-charging>%
format-discharging = <ramp-capacity> <label-discharging>%

label-full = 
label-full-foreground = ${theme-colors.fg}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-foreground = ${theme-colors.fg}

label-charging = %percentage%
label-discharging = %percentage%
label-discharging-foreground = ${theme-colors.urgent-bg}
label-charging-foreground = ${theme-colors.fg}


[module/memory]
type = custom/script
interval = 3

exec = free -m | grep Mem | awk '{print ($3)}'

format = <label>
format-underline = ${theme-colors.urgent-bg}

label = " RAM: %output%MB"


[module/rofimenu]
type = custom/text
content = "Run"
content-prefix = "λ "
content-prefix-foreground = ${theme-colors.urgent-bg}

content-foreground = ${theme-colors.fg}
content-underline = ${theme-colors.focused-bg}

click-left = rofi -show drun -theme '.config/rofi/rofi/launcher/launcher.rasi' &
