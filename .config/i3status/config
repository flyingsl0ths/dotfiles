general {
        colors = true
        interval = 5
}

order += "volume master"
order += "tztime local"
order += "memory"
order += "battery all"

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted"
        device = "pulse:0"
        separator = true
        separator_block_width = 15
}

wireless wlp1s0 {
        format_up = "W: %essid"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E %ip (%speed)"
        format_down = ""
}

tztime local {
        format = "%m/%d/%Y %a %I:%M%P"
        separator = true
        separator_block_width = 15
}

memory {
        format = "MEM %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

battery all {
    format = " %status %percentage "
    format_down = "No battery"
    last_full_capacity = true
    integer_battery_capacity = true
    status_chr = ""
    status_bat = ""
    status_unk = ""
    status_full = ""
    low_threshold = 20
    threshold_type = time
}
