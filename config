[bar/mainbar-xmonad]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
monitor-strict = false
override-redirect = false
width = 95%
height = 35
offset-x = 2.5%
offset-y = 0.7%
radius = 0.0%
fixed-center = true
bottom = false
separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = ${colors.foreground}

;border-size = 3
;border-left-size = 3
;border-right-size = 5
;border-top-size = 0
;border-bottom-size = 0
;border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "SF Pro Display Bold:size=13;0"
font-1 = "FontAwesome:size=14;0"
font-2 = "SF Pro Display Bold:size=13;0"
font-3 = "JetBrainsMonoMedium Nerd Font Medium:size=12;0"
font-4 = "FontAwesome5Brands:size=14;0"

modules-left = ewmh date
modules-center = xwindow
modules-right = networkspeeddown networkspeedup volume battery

tray-detached = false
tray-offset-x = -4
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 18
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}


